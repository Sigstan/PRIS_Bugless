@model IEnumerable<PRIS.Web.Models.CourseModels.StudentLockDataViewModel>

@{
    ViewData["Title"] = "LockingOfStudentData";
}
<h3>
    Studentų duomenų užrakinimas
    @*sutvarkyti grizti mygtuka*@
    @Html.ActionLink("Grįžti", "Main", "Home", new { }, new { @class = "btn btn-outline-secondary float-right rounded-pill" })
</h3>
<hr/>
<div class="text-danger">@ViewContext.TempData["ErrorMessage"]</div>
<form asp-action="LockingOfStudentData">
    <table class="table table-bordered">
        <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.PercentageGrade)</th>
                <th>@Html.DisplayNameFor(model => model.ConversationGrade)</th>
                <th>@Html.DisplayNameFor(model => model.FinalTestPoints)</th>
                <th>@Html.DisplayNameFor(model => model.Priority)</th>
                <th>@Html.DisplayNameFor(model => model.SignedAContract)</th>
                <th>@Html.DisplayNameFor(model => model.StudentDataLocked)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PercentageGrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConversationGrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalTestPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td class="text-center">
                    <input type="checkbox" name="HasSignedAContract" asp-for="@item.SignedAContract" value="@item.Id" id="checkbox-@item.Id" class="checkbox-inline text-center">
                </td>
                @*<td class="text-center">
                    <input type="checkbox" name="HasPassedExam" asp-for="@item.StudentDataLocked" value="@item.Id" id="checkbox-@item.Id" onclick="clickThis(event, this.value)" class="checkbox-inline text-center">
                </td>*@
            </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Išsaugoti" class="btn btn-secondary float-right mr-5" />
</form>
