@model PRIS.Web.Models.InvitationToStudyModel.StudentComment

@{
    ViewData["Title"] = "EditComment";
}

<h4>Įrašykite komentarą:</h4>
<hr />
@Html.DisplayFor(model => model.StudentFirstName)
@Html.DisplayFor(model => model.StudentLastName)

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Išsaugoti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Grįžti</a>
</div>

