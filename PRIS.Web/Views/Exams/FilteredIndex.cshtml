@model PRIS.Web.Models.ExamsViewModel

@{
    ViewData["Title"] = "FilteredIndex";
}

<h3>
    Testai
    @Html.ActionLink("Grįžti", "Main", "Home", new { }, new { @class = "btn btn-outline-secondary float-right rounded-pill" })

    @Html.DropDownListFor(x => Model.AcceptancePeriod, new SelectList(Model.AcceptancePeriod, "Value", "Text"), htmlAttributes: new { @onchange = "callChangefunc(this.value)", @class = "form-control", id = "City" })
</h3>

<hr />
<a asp-action="Create">Sukurti naują</a>
<div class="text-danger">@ViewContext.TempData["ErrorMessage"]</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Miestas</th>
            <th>Data</th>

            <th class="borderless-cell" width="100px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExamViewModels)
        {
            <tr>
                <td>
                    <div class="mask flex-center" data-toggle="collapse" data-target="#demo">@Html.DisplayFor(modelItem => item.SelectedCity)</div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td class="borderless-cell">
                    <span class="dropdown">
                        <a data-toggle="dropdown"><i class="fa fa-cog" style="color: slategray"></i></a>
                        <span class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @Html.ActionLink("Kandidatai", "Index", "Students", new { id = item.Id }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Balų šablonas", "Edit", "TaskParameters", new { id = item.Id }, new { @class = "dropdown-item" })
                        </span>
                    </span>
                    @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "fa fa-trash" })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function callChangefunc(value) {
        window.location.href = "/Exams/FilteredIndex?value=" + value;
    }
</script>

