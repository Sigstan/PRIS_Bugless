@model PRIS.Web.Models.ExamsViewModel

@{
    ViewData["Title"] = "Index";
}

<h3>
    Testai
    @Html.ActionLink("Grįžti", "Main", "Home", new { }, new { @class = "btn btn-outline-secondary float-right rounded-pill" })

    <select class="btn btn-outline-secondary float-right mr-3" onchange="callChangefunc(this.value)">
        <option style="display:none">@Model.SelectedAcceptancePeriod</option>
        @foreach (var ap in Model.AcceptancePeriod)
        {
            <option value="@ap.Value">@ap.Text</option>
        }
    </select>
</h3>

<hr />
<a asp-action="Create">Sukurti naują</a>
<div class="text-danger">@ViewContext.TempData["ErrorMessage"]</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Miestas</th>
            <th>Data</th>

            <th class="borderless-cell" width="100px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExamViewModels)
        {
            <tr>
                <td>
                    <div class="mask flex-center" data-toggle="collapse" data-target="#demo">@Html.DisplayFor(modelItem => item.SelectedCity)</div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td class="borderless-cell">
                    <span class="dropdown">
                        <a data-toggle="dropdown"><i class="fa fa-cog" style="color: slategray"></i></a>
                        <span class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @Html.ActionLink("Kandidatai", "Index", "Students", new { id = item.Id }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Balų šablonas", "Edit", "TaskParameters", new { id = item.Id }, new { @class = "dropdown-item" })
                        </span>
                        @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "fa fa-trash" })
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="list-group container">
    <div class="row">
        <div class="list-group-item col-11">Miestas | Data </div>

        @foreach (var item in Model.ExamViewModels)
        {
            <a asp-action="Index" asp-controller="Students" asp-route-id="@item.Id" class="list-group-item col-11 list-group-item-action list-group-item-light">

                @Html.DisplayFor(modelItem => item.SelectedCity) | @Html.DisplayFor(modelItem => item.Date)
            </a>
            <div class="col-1 pt-2">
                @Html.ActionLink("", "Edit", "TaskParameters", new { id = item.Id }, new { @class = "fa fa-cog text-secondary" }) @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "fa fa-trash" })
            </div>
        }
    </div>
</div>

<script>
    function callChangefunc(value) {
        window.location.href = "/Exams/Index?value=" + value;
    }
</script>


